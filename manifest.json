{
    "manifest_version": 3,
    "name": "Altissia Wizard",
    "version": "1.0.1",
    "description": "Altissia Wizard is a tool that helps you to get answers of exercises in Altissia langues platform.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://*.ofppt-langues.ma/*",
        "https://app.ofppt-langues.ma/*",
        "*://*.altissia.org/*",
        "*://*.altissia.org/*",
        "*://*/platform/learning-path/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/platform/learning-path/mission/*/activity/*",
                "*://*/platform/*"
            ],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": "icons/icon.png"
    },
    "devtools_page": "devtools.html",
    "incognito": "split",
    "web_accessible_resources": [
        {
            "resources": ["data.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; font-src https://cdn.jsdelivr.net"
    }
}
